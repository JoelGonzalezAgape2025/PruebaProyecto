@model pruebaPlanilla23.Models.PuestoTrabajo

@{
    ViewData["Title"] = "Eliminar Puesto de Trabajo";
}

<h1 class="text-center">Eliminar Puesto de Trabajo</h1>
<h3 class="text-center text-muted">¿Estás seguro de que deseas eliminar este puesto?</h3>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.NombrePuesto)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NombrePuesto)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.SalarioBase)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.SalarioBase)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.ValorxHora)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ValorxHora)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.ValorExtra)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ValorExtra)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-8">
                    @{
                        var estadoTexto = Model.Estado == 1 ? "Activo" : "Inactivo";
                    }
                    @estadoTexto
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>