@model pruebaPlanilla23.Models.PuestoTrabajo

@{
    ViewData["Title"] = "Detalles del Puesto de Trabajo";
}

<h1 class="text-center">Detalles del Puesto de Trabajo</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.NombrePuesto)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NombrePuesto)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.SalarioBase)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.SalarioBase)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.ValorxHora)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ValorxHora)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.ValorExtra)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ValorExtra)
                </dd>

                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-8">
                    @{
                        var estadoTexto = Model.Estado == 1 ? "Activo" : "Inactivo";
                    }
                    @estadoTexto
                </dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary px-4">Volver</a>
            </div>
        </div>
    </div>
</div>