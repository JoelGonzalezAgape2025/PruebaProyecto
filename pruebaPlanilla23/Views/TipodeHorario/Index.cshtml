@model IEnumerable<pruebaPlanilla23.Models.TipodeHorario>

@{
    ViewData["Title"] = "Index";
}
<form asp-action="Index">
	<div class="card">

		<div class="card-header">
			<div class="form-group">
				<label class="control-label">Nombre de Tipo de horario</label>
				<input type="text" name="NombreHorario" class="form-control" />
			</div>

			<br />
			<div class="col-12">
				<input type="submit" value="Buscar" class="btn btn-primary" />
				<a asp-action="Create" class="btn btn-success">Nuevo Tipo de Horario</a>
			</div>
		</div>
	</div>
</form>

<div class="card-body">

	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead class="table-dark">
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.NombreHorario)
					</th>
					<th class="text-end">
						Acciones
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.NombreHorario)
						</td>
						<td class="text-end">
							<div class="btn-group" role="group">
								<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">Agregar Dias</a>
								<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detalle</a>
								<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>