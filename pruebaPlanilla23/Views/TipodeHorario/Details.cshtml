@model pruebaPlanilla23.Models.TipodeHorario

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle de tipo de horario</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreHorario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreHorario)
        </dd>
    </dl>
</div>

<div class="table-responsive">
    <h4>Horarios Asociados</h4>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Día</th>
                <th>Horas por Día</th>
                <th>Hora de Entrada</th>
                <th>Hora de Salida</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var horario in Model.Horarios)
            {
                <tr>
                    <td>@horario.Dias</td>
                    <td>@horario.HorasxDia</td>
                    <td>@horario.HorasEntrada.ToString("hh\\:mm")</td>
                    <td>@horario.HorasSalida.ToString("hh\\:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>


    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
